<div class="container">
        <h1 class="text-center event-title"><%= @event.title %></h1>
        <h3 class="text-center event-title"><%= @event.descrip %></h3>
    </div>

    <div class="row event" style="background-color:#330099 ">
        <div class="col-xs-3 text-center">
        <h4 class="event-end">
            <strong>Start</strong>
        </h4>
        </div>
        <div class="col-xs-9">
        </div>
    </div>
    <% seg_num = @segments.length %>
    <% color = ["#88A825", "#911146", "#CF4A30", "#ED8C2B", "#330099"] %>
    <% count = 0 %>
    <% @segments.each do |segment| %>
    <% if count == 0 %>
      <% cur_color = color[0] %>
    <% else %>
      <% cur_color == "" %>
    <% end %>
    <% if count == seg_num - 1 %>
      <% c_color = color[count % 5] %>
    <% else %>
      <% c_color = "" %>
    <% end %>
      <div class="row event" style="background-color:<%= color[count % 5] %>">
        <div class="col-xs-3 path">
            <div class="connector-top" style="background-color: <%= cur_color %>"></div>
            <div class="circle"></div>
            <div class="connector-bot" style="background-color: <%= c_color %>"></div>
        </div>
        <div class="col-xs-9">
          <h3><%= segment.place %></h3>
          <h4><%= segment.interaction %></h4>
        </div>
    </div>
    <% count += 1 %>
    <% end %>
    <div class="row event" style="background-color:#330099 ">
        <div class="col-xs-3 text-center">
        <h4 class="event-end">
            <strong>End</strong>
        </h4>
        </div>
        <div class="col-xs-9">
        </div>
    </div>
